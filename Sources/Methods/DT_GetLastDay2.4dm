$y:=Year of:C25($1)
$m:=Month of:C24($1)
Case of 
	: ($m=1)
		$0:=31
	: ($m=2)
		If (Mod:C98($y;4)=0)
			$0:=29
		Else 
			$0:=28
		End if 
	: ($m=3)
		$0:=31
	: ($m=4)
		$0:=30
	: ($m=5)
		$0:=31
	: ($m=6)
		$0:=30
	: ($m=7)
		$0:=31
	: ($m=8)
		$0:=31
	: ($m=9)
		$0:=30
	: ($m=10)
		$0:=31
	: ($m=11)
		$0:=30
	: ($m=12)
		$0:=31
End case 
