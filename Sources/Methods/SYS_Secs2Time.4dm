//%attributes = {}
  //SYS_Secs2Time

  // =================================================================
  // Usuario (OS): abachler
  // Fecha y Hora: 28/05/03, 11:33:25
  // -------------------------------------------------------------------------------
  // Metodo: SYS_Secs2Time
  // Descripcion: extrae la hora desde segundos
  // 
  //
  // Parametros
  //$1=Segundos (real)
  // ==================================================================



  // DECLARACIONES
  // -------------------------------------------------------------------------------
C_REAL:C285($seconds;$1)
C_TIME:C306($time;$0)
C_DATE:C307($date)

  // INICIALIZACIONES
  // -------------------------------------------------------------------------------
$seconds:=$1

  // CUERPO DEL METODO
  // -------------------------------------------------------------------------------
$dias:=Int:C8($seconds/86400)
$remaining:=Dec:C9($seconds/86400)
$time:=Round:C94(86400*$remaining;0)
$date:=!1904-01-01!+$dias
$0:=$time

  // LIBERACION DE MEMORIA
  // -------------------------------------------------------------------------------


  // FIN DEL METODO
  // -------------------------------------------------------------------------------